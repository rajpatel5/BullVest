<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/graph_outline">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/videoView"
                android:background="@color/white"
                android:fontFamily="@font/biorhyme_extrabold"
                android:gravity="center_horizontal"
                android:paddingBottom="2dp"
                android:paddingTop="4dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="How Does the Stock Market Work?" />

            <!-- Underline -->
            <View
                android:id="@+id/title_underline"
                android:layout_below="@id/videoTitle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@color/colorAccent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_underline"
                android:background="@color/white"
                android:fontFamily="@font/lusitana"
                android:gravity="start"
                android:paddingBottom="4dp"
                android:paddingEnd="0dp"
                android:paddingStart="6dp"
                android:text="@string/investopedia"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="italic" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
